@{
    ViewBag.Title = "suppliersFullView";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>




<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">

            <div class="col-sm-8">
                <div class="col-sm-6">
                    <h3 class="mb-0"><b>View Supplier</b></h3>
                </div>
            </div>
            <div class="col-sm-4">
                <ol class="breadcrumb float-sm-right">

                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Hardware")">Home</a></li>
                    <li class="breadcrumb-item active">View Supplier</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-outline card-warning">
                <div class="card-header">
                    <h3 class="card-title">
                        Supplier Details
                    </h3>
                </div>
                <div class="card-body">

                    <table>
                        <tr>
                            <th>Name of Supplier</th>
                            <td>@ViewBag.Supplier.Name_of_Supplier</td>
                        </tr>
                        <tr>
                            <th>Registration Status</th>
                            <td>@ViewBag.Supplier.Registration_Status</td>
                        </tr>
                        <tr>
                            <th>Registered Year</th>
                            <td> @ViewBag.Supplier.Registration_Year</td>
                        </tr>
                        <tr>
                            <th>Address of Dealer</th>
                            <td>@ViewBag.Supplier.Address_of_Dealer</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td> @ViewBag.Supplier.email</td>
                        </tr>
                        <tr>
                            <th>Fax</th>
                            <td>@ViewBag.Supplier.fax</td>
                        </tr>
                        <tr>
                            <th>Telephone</th>
                            <td>@ViewBag.Supplier.Telephone</td>
                        </tr>
                        <tr>
                            <th>Contact Person1 Name</th>
                            <td>@ViewBag.Supplier.Contact_Person1</td>
                        </tr>
                        <tr>
                            <th>Contact Person1 phone</th>
                            <td> @ViewBag.Supplier.Contact_Person1_Phone</td>
                        </tr>

                        <tr>
                            <th>Contact Person2 Name</th>
                            <td>@ViewBag.Supplier.Contact_Person2</td>
                        </tr>
                        <tr>
                            <th>Contact Person2 phone</th>
                            <td>@ViewBag.Supplier.Contact_Person2_Phone</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>@ViewBag.Supplier.status</td>
                        </tr>
                    </table>


                </div>

            </div>
        </div>
    </div>
</section>










  
    
 


