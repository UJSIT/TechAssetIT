                    <section class="content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card card-outline card-info"> 
                                    
                                        <div class="card-body">
                                            <table id="example1" class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Item Type</th>
                                                        <th>IT No</th>
                                                        <th>Purchased Division</th>
                                                        <th>Current Location</th>
                                                        <th>Request Date</th>
                                                        <th>Recommend Date</th>
                                                         <th>Approved Date</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (System.Data.DataRow r in Model.dt13.Rows)
                                                    {

                                                        string path = "../../Content/Icon/" + r.ItemArray.GetValue(0).ToString().Trim() + ".png";
                                                        <tr>

                                                            <td>
                                                                <center>
                                                                    <img src="@path" width="25" /> &nbsp;
                                                                    @r.ItemArray.GetValue(0).ToString().Trim()
                                                                </center>
                                                            </td>
                                                            <td>@r.ItemArray.GetValue(1).ToString().Trim()</td>
                                                            <td>@r.ItemArray.GetValue(2).ToString().Trim()</td>
                                                          
                                                            <td>@r.ItemArray.GetValue(3).ToString().Trim()</td>
                                                            <td>@r.ItemArray.GetValue(4).ToString().Trim()</td> 
                                                            <td>@r.ItemArray.GetValue(5).ToString().Trim()</td> 
                                                            <td>@r.ItemArray.GetValue(6).ToString().Trim()</td>                                                            
                                                            <td>
                                                                <center>
                                                                    <a href="/Hardware/DevicesFullView?itNO=@r.ItemArray.GetValue(1).ToString()" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="View">
                                                                        <i class="fas fa-eye"></i>
                                                                    </a>
                                                                    |
                                                                    <a href="/Hardware/StoringDispose?itNO=@r.ItemArray.GetValue(1).ToString()" class="btn btn-success btn-sm approve-btn"  data-bs-toggle="tooltip" data-bs-placement="top" title="Stores">
                                                                        <i class="fas fa-store"></i>
                                                                    </a>

                                                                </center>                                                                
                                                            </td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </div>


                                    </div>
                                </div>
                            </div>
                    </section>






<!-- Modal Structure -->
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">Reject Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="rejectForm">
                    <div class="form-group">
                        <label for="reason">Reason for Not Approve</label>
                        <textarea class="form-control" id="reason" name="reason" rows="3"></textarea>
                    </div>
                    <input type="hidden" id="itNo" name="itNo" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="saveReject">Not Approve</button>
            </div>
        </div>
    </div>
</div>



